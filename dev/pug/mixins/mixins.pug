mixin list-links (...items)
	ul
		each item in items
			li
				a(href="")= item
mixin list (...items)
	ul
		each item in items
			li= item
mixin custom-checkbox(text)
	label.custom-checkbox
		input.custom-checkbox__checkbox(type="checkbox" name="")
		span.custom-checkbox__span
		span.custom-checkbox__label= text 
mixin custom-checkbox-agree(text)
	label.custom-checkbox
		input.custom-checkbox__checkbox(type="checkbox" name="")
		span.custom-checkbox__span
		span.custom-checkbox__label Согласен с политикой обработки персональных данных

mixin svg(name)
	svg&attributes(attributes)
		use(xlink:href=`./img/sprite.svg#${name}`)

mixin catalog-item(imgsrc, name)
	.catalog-item 
		.catalog-item__badge ХИТ
		a.catalog-item__favorite(href="")
		button.catalog-item__fast-view(data-fancybox data-src="#card-popup") Быстрый просмотр
		.swiper.catalog-item__img
			.swiper-wrapper
				.swiper-slide
					.catalog-item__img-inner
						img(src='./img/' + imgsrc +'' alt='')
				.swiper-slide
					.catalog-item__img-inner
						img(src='./img/' + imgsrc +'' alt='')
				.swiper-slide
					.catalog-item__img-inner
						img(src='./img/' + imgsrc +'' alt='')
				.swiper-slide
					.catalog-item__img-inner
						img(src='./img/' + imgsrc +'' alt='')
			.swiper-pagination
		.catalog-item__desc
			a.catalog-item__name(href="")= name
			.catalog-item__info 
				.catalog-item__prices
					.catalog-item__price от 10 000 ₽
					.catalog-item__old-price от 15 000 ₽
				a.button.button-order(href="") Купить
